{
  "manifest_version": 2,
  "name": "Test Extension",
  "version": "1.0",
  "permissions": [
    "tabCapture", 
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}